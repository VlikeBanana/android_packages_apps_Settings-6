<!-- Layout of a header item in PreferenceActivity. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_icon_width"
    android:layout_gravity="center"
    android:minHeight="52dp"
    android:background="@drawable/background_layered">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="0dp"
        android:layout_marginStart="0dip"
        android:layout_marginEnd="0dip">
        
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/header_icon_width"
        android:layout_height="@dimen/header_icon_width" 
        android:background="@drawable/icon_background" />
 
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dip"
        android:layout_marginEnd="6dip"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
        android:layout_weight="1">

        <TextView 
            android:id="@+android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal" />

        <TextView 
            android:id="@+android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/title"
            android:layout_alignStart="@android:id/title"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:ellipsize="end"
            android:maxLines="2" />

    </RelativeLayout>

   <View
       android:id="@+id/sub_divider"
       android:background="@drawable/list_divider"
       android:layout_width="wrap_content"
       android:layout_height="1dp" />

   <Switch android:id="@+id/switchWidget"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:padding="8dip"
       android:focusable="false"
       android:clickable="true" />

</LinearLayout>
