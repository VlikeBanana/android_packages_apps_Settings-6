<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android" >

<!-- List Long-pressed -->
<item 
    android:state_focused="true"
    android:state_pressed="true"
    android:drawable="@drawable/list_longpressed_holo_light">
    <shape>
        <solid android:background="@drawable/list_longpressed_holo_light" />
        <stroke
            android:width="1dp"
            android:color="@color/list_divider" />
        <corners
            android:radius="3dp" />
        <padding
            android:top="0dp"
            android:bottom="2dp"
            android:right="2dp"
            android:left="2dp" />
    </shape>
</item>

<!-- List Focused -->
<item 
    android:state_focused="true"
    android:state_pressed="false" >
    <shape>
        <solid android:background="@drawable/list_focused_holo" />
        <stroke
            android:width="1dp"
            android:color="@color/list_divider" />
        <corners
            android:radius="3dp" />
        <padding
            android:top="0dp"
            android:bottom="2dp"
            android:right="2dp"
            android:left="2dp" />
    </shape>
</item>

<!-- List Pressed -->
<item 
    android:state_focused="false"
    android:state_pressed="true" >
    <shape>
        <solid android:background="@drawable/list_pressed_holo_light" />
        <stroke
            android:width="1dp"
            android:color="@color/list_divider" />
        <corners
            android:radius="3dp" />
        <padding
            android:top="0dp"
            android:bottom="2dp"
            android:right="2dp"
            android:left="2dp" />
    </shape>
</item>

<!-- List Normal -->
<item>
    <shape>
        <solid android:background="@drawable/list_normal_holo_light" />
        <stroke
            android:width="1dp"
            android:color="@color/list_divider" />
        <corners
            android:radius="3dp" />
        <padding
            android:top="0dp"
            android:bottom="2dp"
            android:right="2dp"
            android:left="2dp" />
    </shape>
</item>
</selector>
