<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">    

    <PreferenceCategory
        android:key="navigation_bar"
        android:title="@string/navigation_settings_category_title" >
    
    <PreferenceScreen
        android:key="navigation_settings"
	      android:title="@string/navigation_settings_title"
        android:summary="@string/navigation_settings_summary"
        android:fragment="com.android.settings.mahdi.NavbarSettings" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pie_settings"
        android:title="@string/pie_settings_category_title" >

    <PreferenceScreen
        android:key="pie_settings"
        android:fragment="com.android.settings.mahdi.pie.PieControl"
        android:title="@string/pie_control_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="hardware_keys_category"
        android:title="@string/button_keys_title" >      

    <PreferenceScreen
        android:key="hardware_keys"
        android:title="@string/button_keys_title"
        android:summary="@string/button_keys_summary"
        android:fragment="com.android.settings.mahdi.HardwareKeys" />

    </PreferenceCategory>

</PreferenceScreen>
